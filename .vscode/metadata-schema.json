{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "id": "rtrox-containers/metadata",
  "title": "App Metadata",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "app": {
      "type": "string",
      "description": "The name of the app to use in container name",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "description": "The version of the app"
    },
    "source_repo": {
      "type": "string",
      "description": "The upstream repo to pull release notes from, etc."
    },
    "type": {
      "type": "string",
      "description": "The type of the app. Used to determine test types.",
      "enum": ["web", "cli"]
    },
    "platforms": {
      "type": "array",
      "description": "The platforms to build",
      "items": {
        "type": "string",
        "enum": ["linux/amd64", "linux/arm/v7", "linux/arm64"]
      }
    },
    "tests": {
      "type": "object",
      "description": "Test Configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "If true, tests are enabled for this channel"
        }
      }
    }
  }
}
